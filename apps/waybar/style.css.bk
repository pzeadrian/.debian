* {
	border: none;
	border-radius: 0px;
	font-family: Product Sans, Mononoki Nerd Font;
	font-size: 15px;
	min-height: 16px;
}

window#waybar {
	background: rgba(24,24,24,0.85);
	border-radius: 0px;
	opacity: 1;
	/* animation: fadeIn 1s; */
  	/* -webkit-transition: background .25s ease-in; */
	/* -moz-transition: background .25s ease-in; */
	/* -o-transition: background .5s ease-in; */
	/* transition: background .5s ease-in; */


}

window#waybar.empty {
	background: transparent;
	/* -webkit-transition: background .25s ease-out; */
  	/* -moz-transition: background .25s ease-out; */
  	/* -o-transition: background .5s ease-out; */
  	/* transition: background .5s ease-out; */

}

window#waybar.floating {
	background: transparent;
	/* -webkit-transition: background .25s ease-out; */
  	/* -moz-transition: background .25s ease-out; */
  	/* -o-transition: background .5s ease-out; */
  	/* transition: background .5s ease-out; */

}

window#waybar.hidden {
	opacity: 1;
}

#window {
	margin: 5px 5px;

	padding-top: 2px;
	padding-bottom: 2px;
	padding-left: 15px;
	padding-right: 15px;

	border-radius: 0px;

	transition: none;
	color: #f8f8f8;
	/* background: #282828; */
	background: transparent;

	font-family: sans-serif, Product Sans, Mononoki Nerd Font;	
}

#waybar.empty #window {
	background: none;
}

#custom-logo {
	font-size: 17px;
	margin: 0px 13px 0px 18px;
	color: #f8f8f8;
}

#custom-finder {
	background: none;
	font-size: 0;
	margin: 0;
	padding: 0;
	font-weight: bold;

}

#custom-archivo, #custom-ejecutar, #custom-portapapeles, #custom-finder {
	background: transparent;
	margin: 0px 10px;
	padding: 0px;
	transition: none;
	color: #f8f8f8;

	font-size: 14px;
}

#window {
	background: none;
	font-size: 0px;
	margin: 0;
	padding: 0;
}

#waybar.empty #window {
	background: none;
	font-size: 0;
	margin: 0;
	padding: 0;
}

#workspaces {
	
	margin: 3px 6px;

	padding-top: 1px;
	padding-bottom: 1px;	
	padding-left: 5px;
	padding-right: 5px;
	
	border-radius: 0px;

	/* background: #282828; */
	background: transparent;
	transition: none;
}

#workspaces button {
	margin: 3px -10px;

	padding: 0px 0px;
	/* padding-left: 5px; */
	/* padding-right: 5px; */

	border-radius: 0px;

	transition: none;
	color: #f8f8f8;
	/* background: #363636; */
	background: transparent;
	font-family: Roboto;
}

#workspaces button label {
	font-weight: 900;
	padding-top: 5px;
	padding-bottom: 5px;
	border-radius: 0px;
}

#workspaces button.focused {
	margin: 3px -10px;
	color: #a1b56c;
	/* background: #a1b56c; */
	background: transparent;
}

#workspaces button.focused label {
	margin: 0px 10px;
	color: #181818;
	background: #a1b56c;
	/* background: transparent; */
}


