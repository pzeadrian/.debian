configuration {
    show-icons:                     true;
    display-drun: 		            "ï‘„";
    drun-display-format:            "{icon}";
    disable-history:                false;
    click-to-exit: 		            true;
    location:                       0;
}

@import "font.rasi"
@import "colors.rasi"
@import "layout-config/window.rasi"

* {
    font:                           @reg;
}


window {
    width:                          369px;
}

prompt {
    background-color:               @ON;
    text-color:                     @BG;
    border-radius:                  15px;
    padding:                        5px 15px;
    vertical-align:                 0.5;
    margin:                         0 10px 0 0;
}

/* Textbox prompt color is not in use, but is here just in case it could be neccesary */
textbox-prompt-colon { 
    expand: 			            false;
    str: 			                "Power Menu";
    font:                           @reg;
    background-color:               @ON;
    text-color:                     @BG;
    margin:                         10px 210px 10px 210px;
    padding:                        5px;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    border:                         0px;
    border-color:                   @BDR;
    border-radius:                  15px;
}

inputbar {
    background-color:               @BG;
}

case-indicator {
    background-color:               @BG;
    text-color:                     @FG;
    spacing:                        20px;
}

listview {
    columns:                        1;
    lines:			                4;
    spacing:                        20px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         horizontal;
    background-color:               transparent;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
}

mainbox {
    background-color:               @BG;
    children:                       [ listview ];
    spacing:                        0px;
    padding:                        8px;
    orientation:                    horizontal;
    align-items:                    center;
}

element {
    text-color:                     @FG;
    orientation:                    horizontal;
    border-radius:                  15px;
    padding:                        5px 15px;
    background-color:               transparent;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
}

element-icon {
    background-color: 		        inherit;
    text-color:       		        inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           0px;
    border:                         0px;
}

element-text {
    background-color: 		        inherit;
    text-color:       		        inherit;
    font:			                @reg-icon;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    text-align:                     center;
    align-items:                    center;
    padding:                        5px;
    margin:                         5px 5px 5px 5px;
}

element selected {
    background-color:               @ON;
    text-color:                     @NBG;
    border:                  	    0px 0px 0px 0px;
    border-radius:                  0px;
    border-color:                   @BDR;
}

element-text selected {
    background-color:               transparent;
}

element.active,
element.selected.urgent {
  background-color: @ON;
  text-color: @BG;
  border-color: @ON;
}

element.selected.urgent {
  border-color: @BDR;
}

element.urgent,
element.selected.active {
  background-color: @OFF;
  text-color: @BG;
  border-color: @OFF;
}

element.selected.active {
  border-color: @BDR;
}
