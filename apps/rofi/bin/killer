#!/usr/bin/env bash

selected="$(ps -u $USER | \
            dmenu -theme "$HOME/.config/rofi/config/standardtheme.rasi" -i -p "Detener Proceso" \
            awk '{print $1""$4}')"; 

if [[ ! -z $selected ]]; then

    answer="$(echo -e "Continuar\nCancelar" | \
        dmenu -theme "$HOME/.config/rofi/config/standardtheme.rasi" -i -p "$selected ser√° detenido ")"

    if [[ $answer == "Continuar" ]]; then
        selpid="$(awk '{print $1}' <<< $selected)"; 
        kill -9 $selpid
    fi
fi

exit 0
